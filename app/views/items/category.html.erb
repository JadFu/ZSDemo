<h1>Items in Category: <%= @category.name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Price</th>
      <th>Information</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name, item_path(item) %></td>
        <td><%= link_to item.category.name, item_path(item) %></td>
        <td><%= link_to item.price, item_path(item) %></td>
        <td><%= link_to item.information, item_path(item) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @items %>
