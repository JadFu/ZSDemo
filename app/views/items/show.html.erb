<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <h1><%= @item.name %></h1>
      <p><%= @item.information %></p>
      <p>Price: <%= number_to_currency(@item.price) %></p>
      <p>Category: <%= @item.category.name %></p>
      <p>Last update: <%= @item.last_update.strftime("%B %d, %Y") %></p> <!-- formats the date -->
      <p>Discount: <%= @item.discount %> %</p>
    </div>
    <div class="col-md-6">
      <p><%= image_tag(asset_path(@item.image), alt: @item.name, class: 'img-fluid') %></p> <!-- display the item image -->
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-12">
      <%= link_to 'Back to Items', items_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
