<h1>Search Results</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Price</th>
      <th>Information</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name, item_path(item) %></td>
        <td><%= item.category.name %></td>
        <td><%= item.price %></td>
        <td><%= item.information %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @items %>
