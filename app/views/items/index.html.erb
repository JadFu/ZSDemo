<h1 class="mb-4">All Items</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
        <th>Information</th>
        <th>Add to Cart</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= link_to item.name, item_path(item) %></td>
          <td><%= link_to item.category.name, item_path(item) %></td>
          <td><%= link_to number_to_currency(item.price), item_path(item) %></td>
          <td><%= link_to item.information, item_path(item) %></td>
          <td>
            <%= button_to 'Add to Cart', add_to_cart_path(item), method: :post, remote: true, class: 'btn btn-primary' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="d-flex justify-content-center">
  <%= paginate @items %>
</div>
