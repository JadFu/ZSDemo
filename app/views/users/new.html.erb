<div class="container mt-5">
  <h1>Sign Up</h1>

  <%= form_with model: @user, url: '/sign_up', class: 'needs-validation' do |form| %>
    <div class="form-group">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :tax_id, class: "form-label" %>
      <%= form.collection_select :tax_id, Tax.all, :id, :tax_region, {}, { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.label :address, class: "form-label" %>
      <%= form.text_area :address, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit 'Sign Up', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

