<h1>Sign Up</h1>

<%= form_with model: @user, url: '/sign_up' do |form| %>
  <%= form.label :email %>
  <%= form.email_field :email, required: true %>

  <%= form.label :password %>
  <%= form.password_field :password, required: true %>

  <%= form.label :tax_id %>
  <%= form.collection_select :tax_id, Tax.all, :id, :tax_region %>

  <%= form.label :address %>
  <%= form.text_area :address %>


  <%= form.submit 'Sign Up' %>
<% end %>
